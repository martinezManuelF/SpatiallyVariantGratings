Nx = Sx/dx;
dy = a/Sy;
Ny = Sy/dy;

% CREATE SOME AXES
xa = [0 : Nx-1]*dx; xa = xa - mean(xa);
ya = [0 : Ny-1]*dy; ya = ya - mean(ya);
