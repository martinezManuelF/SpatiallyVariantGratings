% CREATE UNIFORM K-FUNCTION
A = (25*degrees) * ones(Nx,Ny);
R = (2*pi/a) * ones(Nx,Ny);
[KX,KY] = pol2cart(A,R);

% GENERATE GRATING
ER = cos(KX.*X + KY.*Y);

% PLOT K FUNCTION AND GRATING
